<div class="reveal" id="loginModal" data-reveal>
  <div class="reveal__header">
    <h3 class="reveal__title"><%= t('.please_sign_in') %></h3>
    <button class="close-button" data-close aria-label="Close modal"
      type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="row">
    <div class="columns medium-8 medium-centered">
      <%= decidim_form_for(Decidim::User.new, as: :user, url: session_path(:user), html: { class: "register-form new_user" }) do |f| %>
        <div>
          <div class="field">
            <%= f.email_field :email, autofocus: true  %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit t("devise.sessions.new.sign_in"), class: "button expanded" %>
        </div>
      <% end %>
      <p class="text-center">
        <%= link_to t('.sign_up'), decidim.new_user_registration_path, class: "button expanded" %>
      </p>
      <% if (defined? current_participatory_process.id) && current_participatory_process.id == 9 %>
        <% if (defined? @proposal) %>
          <% case  @proposal.id
          when 34 %><p class="text-center">
              <%= link_to t('.vote_without_register'), 'http://sanfermin.pamplona.es/carteles/Datos_txupinazo.asp?opcion=1&ORIGEN=WEB&Idioma=1', class: "button expanded" %></p>
            <%when 33 %><p class="text-center">
              <%= link_to t('.vote_without_register'), 'http://sanfermin.pamplona.es/carteles/Datos_txupinazo.asp?opcion=2&ORIGEN=WEB&Idioma=1', class: "button expanded" %></p>
            <%when 32 %><p class="text-center">
              <%= link_to t('.vote_without_register'), 'http://sanfermin.pamplona.es/carteles/Datos_txupinazo.asp?opcion=3&ORIGEN=WEB&Idioma=1', class: "button expanded" %></p>
            <%when 31 %><p class="text-center">
              <%= link_to t('.vote_without_register'), 'http://sanfermin.pamplona.es/carteles/Datos_txupinazo.asp?opcion=4&ORIGEN=WEB&Idioma=1', class: "button expanded" %></p>
          <%end%>
        <%else%>
          <p class="text-center">
            <%= link_to t('.vote_without_register'), 'http://sanfermin.pamplona.es/carteles/chupinazo.asp', class: "button expanded" %></p>
        <%end%>
      <%end%>
    </div>
  </div>
</div>
